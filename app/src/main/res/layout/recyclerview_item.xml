<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/unsold_img"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    fresco:actualImageScaleType="centerCrop"
                    />
                <ImageView
                    android:id="@+id/navigmaske"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="#0000"
                    android:src="@drawable/ic_hunzhuang"
                    android:scaleType="fitXY"
                    android:layout_alignTop="@id/unsold_img"
                    android:layout_alignLeft="@id/unsold_img"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/unsold_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:text="落叶松 4米 38*175"/>

                <TextView
                    android:id="@+id/unsold_type"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_unsold"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="混"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="11dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/location"/>

                <TextView
                    android:id="@+id/unsold_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="满洲里"/>
                <TextView
                    android:id="@+id/unsold_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="13722006660"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>