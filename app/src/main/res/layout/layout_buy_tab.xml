<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lenglayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="长度"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_buy_tab"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="match_parent"/>

        <include
            android:id="@+id/tv_with_heght"
            layout="@layout/layout_unsold_width_height"/>

        <include
            android:id="@+id/tv_jinji"
            layout="@layout/layout_unsold_jingji"/>

        <Button
            android:id="@+id/btn_buylenth_commit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_unsold"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="确认"
            android:textColor="#fff"/>
    </LinearLayout>
</ScrollView>