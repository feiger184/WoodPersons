<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppBarText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/app_bar_text</item>
    </style>

    <style name="AppBarText.Normal">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppBarText.Huge">
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

</resources>
